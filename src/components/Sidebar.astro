<button class="hamburger" id="hamburger">
    &#9776; <!-- Hamburger icon -->
</button>

<style>
    .hamburger {
        position: absolute;
        top: 20px;
        right: 20px;
        cursor: pointer;
        z-index: 1000;
        background-color: transparent;
        border: none;
        font-size: 24px;
    }
    .sidebar {
        min-width: 250px;
        background-color: var(--secondary);
        padding: 20px;
        position: sticky;
        top: 0;
        height: 100vh;
        overflow-y: auto;
        transition: transform 0.3s ease;
        z-index: 2; /* Ensure sidebar is above other content */
    }
    .sidebar-content {
        display: flex;
        flex-direction: column;

        height: 95vh;
        justify-content: space-between;
    }
    .sidebar.hidden {
        transform: translateX(-100%);
    }

    /* Photot */
    .sidebar-top,
    .sidebar-bottom {
        text-align: center;
    }
    .sidebar-content p {
        margin: 7px 0;
    }

    .sidebar-content .name {
        padding-top: 15px;
        font-size: large;
    }
    .half-cover {
        position: absolute;
        width: 100%;
        height: 115px;
        background-image: url(https://media.licdn.com/dms/image/v2/D5616AQFrfS5SIG1gkw/profile-displaybackgroundimage-shrink_350_1400/profile-displaybackgroundimage-shrink_350_1400/0/1727014802338?e=1733356800&v=beta&t=SKxT-T1bZ_WoURHDgl7_JB93U5LQnFWypzUd4Cs3u2k);
        z-index: -1;
        background-size: cover;
        top: 0;
        left: 0;
    }
    


    .social-link-group {
        display: flex;
        justify-content: center;
        gap: 5px;
        padding-top: 15px;
    }
    /* a.social-link {
        display: flex;
        justify-content: center;
        align-items: center;
        vertical-align: middle;
        text-decoration: none;
        color: unset;
        border-radius: 50%;
        background-color: var(--accent-dark);
        width: 30px;
        height: 30px;
    }
    a.social-link svg {
        padding: 5px;
    } */

    ul li {
        list-style: none;
    }
    .sidebar-middle ul {
        padding: 0;
    }

    .sidebar-middle ul li {
        border-top: 1px solid #ffffff38;
        padding: 10px 10px;
        display: flex;
        align-items: end;
    }

    .download-button {
        background-color: var(--primary);
        padding: 4px;
        display: flex;
        align-items: center;
        /* justify-content: center; */
        text-align: end;
        border-radius: 50px;
        padding-right: 30px;
        width: fit-content;
        text-decoration: none;

        gap: 15px;
    }

    @media (max-width: 768px) {
        .sidebar {
            position: absolute;
            /* width: 100%; */
            height: 100vh;
        }

        .hamburger {
            display: block;
        }
    }

    @media (min-width: 769px) {
        .sidebar {
            display: block;
            transform: translateX(0);
        }

        .hamburger {
            display: none;
        }
    }
</style>
